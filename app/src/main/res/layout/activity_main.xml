    <Button
        android:id="@+id/btn_build_client_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAllCaps="false"
        android:text="build OkHttpClient-2"/>

    <Button
        android:id="@+id/btn_build_client_3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAllCaps="false"
        android:text="build OkHttpClient-3"/>
</LinearLayout>